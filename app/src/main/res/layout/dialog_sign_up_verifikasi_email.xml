<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    android:layout_gravity="center"
    app:cardElevation="4dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/white"
            android:gravity="center">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/tv_verif_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verifikasi Email"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginBottom="4dp" />

            <!-- Message TextView -->
            <TextView
                android:id="@+id/tv_verif_message"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:text="Silahkan buka email anda dan konfirmasi. Kami telah mengirimkan link ke email johndoe@gmail.com"
                android:textColor="@android:color/darker_gray" />

            <!-- Timer TextView -->
            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:00"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"/>

            <!-- Resend Section -->
            <TextView
                android:id="@+id/tv_no_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak menerima email?"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/tv_resend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kirim Ulang"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>
    </ScrollView>
</com.google.android.material.card.MaterialCardView>